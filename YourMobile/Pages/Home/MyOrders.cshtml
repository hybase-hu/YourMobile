@page
@model YourMobile.Pages.Home.MyOrdersModel
@{
	ViewData["Title"] = "My Orders";
}

<div class="card">
	<div class="card-body">

		@foreach(var item in Model.OrderDataList)
		{
			<div class="card my-2">
				<div class="card-header bg-dark">@item.Header.CreatedDate [ @item.Header.TotalPrice.ToString("N0") FT ]</div>
				<div class="card-body">
					
				<div class="alert alert-primary text-dark">@item.Header.Status</div>

				<table class="table table-hover">
					<thead>
						<tr>
							<th>Product Name</th>
							<th>Price</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var order in item.ProductWithPhotoList)
						{
							<tr class="table-active">
								<td>@order.Product.ProductName</td>
								<td>@order.Product.Price.ToString("N0") FT</td>
							</tr>
						
						}
					</tbody>
				</table>

				
				</div>
			</div>
		}

	</div>
</div>
